# Configuration file for EditorConfig.
# More information is available under <https://editorconfig.org/>.

root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.?pp]
indent_size = 4
tab_width = 4

[{CMakeLists.txt,*.cmake}]
indent_size = 2
tab_width = 2
